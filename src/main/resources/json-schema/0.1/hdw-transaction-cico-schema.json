{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "positiveNumber": {
      "type": "number",
      "exclusiveMinimum": 0.0,
      "examples": [
        34.234,
        0.001,
        122.00,
        12
      ]
    },
    "nonEmptyString": {
      "type": "string",
      "minLength": 1,
      "examples": [
        "Any String",
        "   "
      ]
    },
    "dateTime": {
      "type": "string",
      "examples": [
        "2018-08-10T09:30:00.000"
      ],
      "pattern": "^([0-9]{4})-([0-9]{2})-([0-9]{2})T([0-9]{2}):([0-9]{2}):([0-9]{2})(.[0-9]{3,6})?$"
    },
    "emailId": {
      "type": "string",
      "format": "email",
      "examples": [
        "john.snow134@mail.com"
      ]
    }
  },
  "type": "object",
  "properties": {
    "laborEvent": {
      "type": "object",
      "properties": {
        "schemaUrl": {
          "type": "string",
          "$ref": "#/definitions/nonEmptyString"
        },
        "contract_version": {
          "type": "string",
          "$ref": "#/definitions/nonEmptyString"
        },
        "source": {
          "type": "string",
          "$ref": "#/definitions/nonEmptyString"
        },
        "event_type": {
          "type": "string",
          "$ref": "#/definitions/nonEmptyString"
        },
        "action": {
          "type": "string",
          "$ref": "#/definitions/nonEmptyString"
        },
        "activity": {
          "type": "string",
          "$ref": "#/definitions/nonEmptyString"
        },
        "platform": {
          "type": "string",
          "$ref": "#/definitions/nonEmptyString"
        },
        "dc_number": {
          "type": "string",
          "$ref": "#/definitions/nonEmptyString",
          "minLength": 4
        },
        "publish_timestamp": {
          "type": "string",
          "$ref": "#/definitions/dateTime"
        },
        "trace_id": {
          "type": "string",
          "$ref": "#/definitions/nonEmptyString"
        }
      },
      "required": [
        "schemaUrl",
        "contract_version",
        "source",
        "event_type",
        "action",
        "activity",
        "platform",
        "dc_number",
        "publish_timestamp",
        "trace_id"
      ]
    },
    "laborEventDetail": {
      "type": "object",
      "properties": {
        "user_id": {
          "type": "string",
          "$ref": "#/definitions/emailId"
        },
        "user_name": {
          "type": "string",
          "$ref": "#/definitions/nonEmptyString"
        },
        "ldap_id": {
          "type": "string",
          "$ref": "#/definitions/nonEmptyString"
        },
        "transaction_id": {
          "type": "string",
          "$ref": "#/definitions/nonEmptyString"
        },
        "transaction_timestamp": {
          "type": "string",
          "$ref": "#/definitions/dateTime"
        },
        "transaction_local_timestamp": {
          "type": "string",
          "$ref": "#/definitions/dateTime"
        }
      },
      "required": [
        "user_id",
        "user_name",
        "ldap_id",
        "transaction_id",
        "transaction_timestamp",
        "transaction_local_timestamp"
      ]
    }
  },
  "required": [
    "laborEvent",
    "laborEventDetail"
  ]
}